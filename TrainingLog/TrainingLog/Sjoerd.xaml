<Window x:Class="TrainingLog.Sjoerd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sjoerd" Height="600" Width="600"
        AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" Icon="Images/running-puppet.jpg">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="TrainingLog"/>
    </Window.TaskbarItemInfo>
    <Border x:Name="Main" Effect="{StaticResource WindowShadow}" Margin="10" Background="Black">
        <Grid Background= "Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--Row 0-->
            <Border Grid.Row="0" x:Name="Header" Background="{Binding ElementName=Main, Path=Background}" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Button x:Name="btnClose" Style="{StaticResource CloseButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Red" Height="10" Width="20" Margin="5,0" Click="btnClose_Click"/>
            </Border>
            <!--Row 1-->
            <DatePicker Grid.Column="0" Grid.Row="1" BorderBrush="Red" HorizontalAlignment="Left" Margin="23,24,0,0" VerticalAlignment="Top"/>
            <!--Row 2-->
            <Button Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Height="30" Width="60"  Content="Cancel" Name="btn2" Click="btn2_Click" Style="{StaticResource MainMenuButton}"/>
            <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" Height="30" Width="60"  Content="Save" Name="btn3" Click="btn3_Click" Style="{StaticResource MainMenuButton}"/>

        </Grid>
    </Border>
</Window>
