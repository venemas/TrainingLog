<Window x:Class="TrainingLog.Sjoerd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sjoerd" Height="300" Width="300"
        AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" Icon="Images/running-puppet.jpg">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="TrainingLog"/>
    </Window.TaskbarItemInfo>
    <Border Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Color="Red" Opacity="0.8" ShadowDepth="10"/>
        </Border.Effect>
        <Grid Background="Azure">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!--VRAGEN-->
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Row 0-->
            <Border Grid.Row="0" x:Name="Header" Background="Beige" MouseLeftButtonDown="Header_MouseLeftButtonDown"/>
            <!--Row 1-->
            <Button Grid.Row="1" Height="40" Width="100" Content="Oh yeah!" Click="btn1_Click" Name="btn1"/>
            <!--Row 2-->
            <Button Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="60"  Content="Oh no!" Name="btn2" Click="btn2_Click" />
            <DatePicker HorizontalAlignment="Left" Margin="23,24,0,0" Grid.Row="1" VerticalAlignment="Top" Cursor="IBeam"/>

        </Grid>
    </Border>
</Window>
