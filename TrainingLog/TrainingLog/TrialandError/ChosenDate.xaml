<UserControl x:Class="TrainingLog.View.ChosenDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="Me"
             d:DesignHeight="28" d:DesignWidth="100">
    <Grid>
        <Border x:Name="Border" Background="{StaticResource FlatLightGreen}" BorderBrush="{StaticResource FlatLightOrange}" BorderThickness="3">
            <TextBlock x:Name="tekst" Foreground="Beige" FontSize="12" FontFamily="Arial" Text="{Binding ElementName=Me, Path=Tekst}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
